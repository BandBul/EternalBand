@using X.PagedList;
@model X.PagedList.IPagedList<EternalBAND.Models.Blogs>
@{
    ViewData["Title"] = "Blog Yazıları";
}

<div class="main-content">

    <div class="page-content">
        <section class="page-title-box">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="text-center text-white">
                            <h3 class="mb-4">@ViewData["Title"]</h3>

                        </div>
                    </div>
                    <!--end col-->
                </div>
                <!--end row-->
            </div>
            <!--end container-->
        </section>
        <!-- end home -->

        <!-- START SHAPE -->
        <div class="position-relative" style="z-index: 1">
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
                    <path fill="#FFFFFF" fill-opacity="1"
                          d="M0,192L120,202.7C240,213,480,235,720,234.7C960,235,1200,213,1320,202.7L1440,192L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z">
                    </path>
                </svg>
            </div>
        </div>
        <!-- END SHAPE -->


        <!-- START BLOG-PAGE -->
        <section class="section">
            <div class="container">
                <div class="row align-items-center">
                   

                </div><!--end row-->
                <div class="row mt-5">
                
                    @foreach (var blog in Model.ToList())
                    {
                        string photoPath = blog.PhotoPath != null ? blog.PhotoPath :
                            (blog.PhotoPath2 != null ? blog.PhotoPath2 : ((blog.PhotoPath3 != null ? blog.PhotoPath3 : ((blog.PhotoPath4 != null ? blog.PhotoPath4 : ((blog.PhotoPath5 != null ? blog.PhotoPath5 : "~/images/hazirlaniyor.jpg")))))));
                        <div class="col-lg-6">
                            <article class="post position-relative mt-4">
                                <div class="post-preview overflow-hidden mb-3 rounded-3">
                                    <a asp-action="Blog" asp-route-s="@blog.SeoLink">
                                        <img src="@photoPath" alt="" class="img-fluid blog-img">
                                    </a>
                                </div>
                                <p class="text-muted mb-2">@blog.AddedDate.ToString("dd/MM/yyyy")</p>
                                <h5 class="mb-3">
                                    <a asp-action="Blog" asp-route-s="@blog.SeoLink" class="primary-link">@blog.Title</a>
                                </h5>
                                <p class="text-muted">
                                    @if (blog.HtmlText.Length > 150)
                                    {
                                        @Html.Raw(blog.HtmlText.Substring(0, 150))
                                    }
                                    else
                                    {
                                        @Html.Raw(blog.HtmlText)
                                    }
                                </p>
                            </article>
                        </div>
                        <!--end col-->
                    }
                </div><!--end row-->


            </div><!-- end container -->
        </section>

        <!--end back-to-top-->
    </div>
</div>