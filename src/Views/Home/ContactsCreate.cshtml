@using EternalBAND.Data
@model EternalBAND.Models.Contacts
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "İletişim";
}

<div class="main-content">

    <div class="page-content">

        <section class="page-title-box">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="text-center text-white">
                            <h3 class="mb-4">@ViewData["Title"]</h3>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end home -->

        <!-- START SHAPE -->
        <div class="position-relative" style="z-index: 1">
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
                    <path fill="#FFFFFF" fill-opacity="1"
                          d="M0,192L120,202.7C240,213,480,235,720,234.7C960,235,1200,213,1320,202.7L1440,192L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z">
                    </path>
                </svg>
            </div>
        </div>
        <!-- END SHAPE -->


        <!-- START CONTACT-PAGE -->
        <section class="section">
            <div class="container">
                <div class="row align-items-center mt-5">
                    <div class="col-lg-6">
                        <div class="section-title mt-4 mt-lg-0">
                            <h3 class="title">İletişim</h3>
                            <p class="text-muted">Bize ulaşmak için formu doldurabilirsin. En kısa süre içerisinde sana ulaşacağız.</p>
                            <form asp-action="ContactsCreate" class="contact-form mt-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="NameSurname" class="control-label"></label>
                                                <input asp-for="NameSurname" class="form-control"/>
                                                <span asp-validation-for="NameSurname" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="Mail" class="control-label"></label>
                                                <input asp-for="Mail" class="form-control"/>
                                                <span asp-validation-for="Mail" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="Phone" class="control-label"></label>
                                                <input asp-for="Phone" class="form-control"/>
                                                <span asp-validation-for="Phone" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="Title" class="control-label"></label>
                                                <input asp-for="Title" class="form-control"/>
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label asp-for="Message" class="control-label"></label>
                                                <textarea asp-for="Message" class="form-control"></textarea>

                                                <span asp-validation-for="Message" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"> Gönder <i class="uil uil-message ms-1"></i></button>
                                    @if (ViewBag.Message != null)
                                    {
                                        string className = "";
                                        if (((string) ViewBag.Message).Contains("başarı"))
                                            className = "success";
                                        else
                                            className = "danger";
                                        <p class="text-@className">@ViewBag.Message</p>
                                    }
                                </div>
                            </form>

                        </div><!--end col-->

                        <!--end col-->
                    </div>
                    <!--end row-->
                    <div class="col-lg-5 ms-auto order-first order-lg-last">
                        <div class="text-center">
                            <img src="~/images/contact.png" alt="" class="img-fluid">
                        </div>
                        <div class="mt-4 pt-3">
                            @{
                                var address = _context.SystemInfo.FirstOrDefault(n => n.Type == "site-address");
                                var phone = _context.SystemInfo.FirstOrDefault(n => n.Type == "site-phone");
                                var mail = _context.SystemInfo.FirstOrDefault(n => n.Type == "site-mail-address");
                            }
                            @if (address != null)
                            {
                                <div class="d-flex text-muted align-items-center mt-2">
                                    <div class="flex-shrink-0 fs-22 text-primary">
                                        <i class="uil uil-map-marker"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-2">
                                        <p class="mb-0">@address.Value</p>
                                    </div>
                                </div>
                            }
                             @if (mail != null)
                                                        {
                                                            <div class="d-flex text-muted align-items-center mt-2">
                                                                <div class="flex-shrink-0 fs-22 text-primary">
                                                                    <i class="uil uil-envelope"></i>
                                                                </div>
                                                                <div class="flex-grow-1 ms-2">
                                                                    <p class="mb-0">@mail.Value</p>
                                                                </div>
                                                            </div>
                                                        }
                                                            @if (phone != null)
                                                            {
                                                                <div class="d-flex text-muted align-items-center mt-2">
                                                                    <div class="flex-shrink-0 fs-22 text-primary">
                                                                        <i class="uil uil-phone-alt"></i>
                                                                    </div>
                                                                    <div class="flex-grow-1 ms-2">
                                                                        <p class="mb-0">@phone.Value</p>
                                                                    </div>
                                                                </div>
                                                            }
                        </div>
                    </div>
                </div>
            </div>
            <!--end container-->
        </section>


    </div>
</div>