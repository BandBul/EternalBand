@model EternalBAND.Models.SystemInfo

@{
    ViewData["Title"] = "Sistem Bilgisi Düzenle";
}
<link href="~/imageuploader/image-uploader.css" rel="stylesheet" type="text/css">
<script src="~/imageuploader/image-uploader.js"></script>
<div class="main-content">

    <div class="page-content">

        <section class="page-title-box">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="text-center text-white">
                            <h3 class="mb-4">@ViewData["Title"]</h3>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="position-relative" style="z-index: 1">
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
                    <path fill="#FFFFFF" fill-opacity="1"
                          d="M0,192L120,202.7C240,213,480,235,720,234.7C960,235,1200,213,1320,202.7L1440,192L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z">
                    </path>
                </svg>
            </div>
        </div>
        <section class="section">
            <div class="container">
                <div class="row">

                    <div class="col-12 col-lg-12">
                        <div class="card p-3" id="typography">
                            <form asp-action="SystemInfoEdit" enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id"/>
                                <div class="form-group m-3">
                                    <label asp-for="Type" class="control-label"></label>
                                    <input asp-for="Type" class="form-control"/>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                @if (Model.Type != "site-favicon" && Model.Type != "site-logo")
                                {
                                    <div class="form-group m-3">
                                        <label asp-for="Value" class="control-label"></label>
                                        <input asp-for="Value" class="form-control" required="required"/>
                                        <span asp-validation-for="Value" class="text-danger"></span>
                                    </div>
                                }
                                <div class="form-group m-3">
                                    <label asp-for="Desc" class="control-label"></label>
                                    <input asp-for="Desc" class="form-control"/>
                                    <span asp-validation-for="Desc" class="text-danger"></span>
                                </div>
                                @{
                                    if (Model.Type == "site-favicon" || Model.Type == "site-logo")
                                    {
                                        <div class="form-group m-3">
                                            <label class="control-label">Fotoğraf</label>
                                            <div class="input-images-2" style="padding-top: .5rem;"></div>
                                        </div>
                                        <script>
  
     
         let preloaded = [
              @{
                  if (Model.Value != null)
                  {
                      @:{id: 1, src: '@Model.Value'},
                  }
              }
              ];
            $('.input-images-2').imageUploader({
                      preloaded: preloaded,
                     imagesInputName: 'image',
                     preloadedInputName: 'old',
                     maxSize: 2 * 1024 * 1024,
                     maxFiles: 1
                 });
</script>
                                    }
                                }

                                <div class="form-group m-3">
                                    <input type="submit" value="Kaydet" class="btn btn-primary mt-3"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <partial name="PartialViews/_SwitcherAndTopPartial"/>
</div>