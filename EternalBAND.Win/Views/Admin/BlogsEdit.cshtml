@model EternalBAND.DomainObjects.Blogs

@{
    ViewData["Title"] = "Blog Yazısı Düzenle";
}
<link href="~/imageuploader/image-uploader.css" rel="stylesheet" type="text/css">

<div class="main-content">

    <div class="page-content">

        <section class="page-title-box">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="text-center text-white">
                            <h3 class="mb-4">@ViewData["Title"]</h3>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="position-relative" style="z-index: 1">
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
                    <path fill="#FFFFFF" fill-opacity="1"
                          d="M0,192L120,202.7C240,213,480,235,720,234.7C960,235,1200,213,1320,202.7L1440,192L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z">
                    </path>
                </svg>
            </div>
        </div>
        <section class="section">
            <div class="container">
                <div class="row">

                    <div class="col-12 col-lg-12">
                        <div class="card p-3" id="typography">
                            <form asp-action="BlogsEdit" enctype="multipart/form-data" method="post" id="blogEditForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id"/>
                                 <div class="form-group m-3">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control"/>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group m-3">
                                    <label asp-for="SummaryText" class="control-label"></label>
                                    <input asp-for="SummaryText" class="form-control" />
                                    <span asp-validation-for="SummaryText" class="text-danger"></span>
                                </div>
                                 <div class="form-group m-3">
                                    <label asp-for="HtmlText" class="control-label"></label>
                                    <input asp-for="HtmlText" type="hidden" class="form-control"/>
                                    <div id="htmlEditor" style="height:250px"></div>
                                    <span asp-validation-for="HtmlText" class="text-danger"></span>
                                </div>
                                 <div class="form-group m-3">
                                    <label asp-for="Tags" class="control-label"></label>
                                    <input asp-for="Tags" class="form-control"/>
                                    <span asp-validation-for="Tags" class="text-danger"></span>
                                </div>
                                 <div class="form-group m-3">
                                    <label asp-for="SeoLink" class="control-label"></label>
                                    <input asp-for="SeoLink" class="form-control"/>
                                    <span asp-validation-for="SeoLink" class="text-danger"></span>
                                </div>
                                <div class="form-group m-3">
                                    <label class="control-label">Fotoğraflar</label>
                                    <div id="image-upload" class="dropzone"></div>
                                </div>
                                 <div class="form-group m-3">
                                    <input type="submit" value="Kaydet" class="btn btn-primary"/>
                                </div>
                            </form>
                         </div>
                    </div>
                </div>
            </div>
        </section>
   
       </div>
   
       <partial name="PartialViews/_SwitcherAndTopPartial"/>
   </div>

@section Scripts {
    <script>
        RunQuill("HtmlText");
        const preloadedFiles = [
            @{
                if (Model.PhotoPath != null)
                {
                    @:{ id: 1, src: '@Model.PhotoPath' },
                }
                if (Model.PhotoPath2 != null)
                {
                    @:{ id: 2, src: '@Model.PhotoPath2' },
                }
                if (Model.PhotoPath3 != null)
                {
                    @:{ id: 3, src: '@Model.PhotoPath3' },
                }
                if (Model.PhotoPath4 != null)
                {
                    @:{ id: 4, src: '@Model.PhotoPath4' },
                }
                if (Model.PhotoPath5 != null)
                {
                    @:{ id: 5, src: '@Model.PhotoPath5' },
                }
            }
        ];

        initDropzone(preloadedFiles)
    </script>
}



