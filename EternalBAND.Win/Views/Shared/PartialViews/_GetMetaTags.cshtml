<!DOCTYPE html>
<html lang="tr">
    @using EternalBAND.DataAccess;
    @using Microsoft.EntityFrameworkCore
    @using Microsoft.Extensions.Options
    @using EternalBAND.Api.Options

    @inject IOptions<SiteGeneralOptions> siteSettings

    @{
        var siteKeywords = siteSettings.Value.MetaKeywords;
        var seoTags = siteSettings.Value.SeoTags;
        var canonicalUrls = siteSettings.Value.CanonicalUrls;
    }
    @* keywords *@
    <meta name="keywords" content="@siteKeywords" />

    @* seoTags *@
    @foreach (var seoTag in seoTags)
    {
        <meta name="@seoTag.Name" content="@seoTag.Value" />
    }

    @* Canonical urls *@
    @foreach (var url in canonicalUrls)
    {
        <link rel="canonical" href="@url" />
    }


    <meta name="robots" content="index">

    <link rel="apple-touch-icon-precomposed" href="@(siteSettings.Value.Logo.Trim())" />
    <meta property="og:image" content="@(siteSettings.Value.Logo.Trim())" />

    <meta property="og:image:width" content="1200"/>
    <meta property="og:image:height" content="630"/>
    <meta property="og:locale" content="tr_TR"/>
    <link rel="shortcut icon" href="@(siteSettings.Value.Logo.Trim())">
</html>