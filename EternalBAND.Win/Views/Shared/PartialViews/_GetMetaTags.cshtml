<!DOCTYPE html>
<html lang="tr">
@using EternalBAND.DataAccess;
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.Options
@using EternalBAND.Api.Options

@inject ApplicationDbContext _context
@inject IOptions<SiteGeneralOptions> _siteSettings


<meta content="@_context.SystemInfo.FirstOrDefault(n => n.Type == "site-keywords").Value" name="keywords">

<meta name="robots" content="index">
<meta content="@_context.SystemInfo.FirstOrDefault(n => n.Type == "site-desc").Value" name="description">
<link rel="apple-touch-icon-precomposed" href="@(_siteSettings.Value.SiteLogo.Trim())" />
<meta property="og:image" content="@(_siteSettings.Value.SiteLogo.Trim())" />

<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>
<meta property="og:locale" content="tr_TR"/>
<link rel="shortcut icon" href="@(_siteSettings.Value.SiteLogo.Trim())">
