<!DOCTYPE html>
<html lang="tr">
@using EternalBAND.Common
@using EternalBAND.DataAccess;
@using EternalBAND.Api.Options
@using Microsoft.Extensions.Options
@inject IOptions<SiteGeneralOptions> _siteSettings
<head>
    <meta charset="UTF-8">
    <title><partial name="PartialViews/_GetSiteTitlePartial"/> - @ViewData["Title"]</title>
    <meta property="og:title" content="@(_siteSettings.Value.Name) - @ViewData["Title"]" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZL805T1RRH"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-ZL805T1RRH');
    </script>

    <partial name="PartialViews/_GetSiteFavicon"/>
    <partial name="PartialViews/_GetMetaTags"/>
    <link rel="stylesheet" href="~/libs/choices.js/public/assets/styles/choices.min.css">
    <link rel="stylesheet" href="~/libs/swiper/swiper-bundle.min.css">
    <link href="~/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css"/>
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/css/app.min.css" id="app-style" rel="stylesheet" type="text/css"/>
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <link rel="stylesheet" href="~/libs/glightbox/css/glightbox.min.css">
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="~/js/quillrun.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.18/dist/sweetalert2.min.css">
    <link href="~/dropzone/dropzone.css" rel="stylesheet" type="text/css">
</head>

<body>
<partial name="PartialViews/_UserProfileControl"/>
<div id="preloader">
    <div id="status">
        <ul>
            @for (int i = 0; i < 5; i++)
            {
                <li></li>
            }

        </ul>
    </div>
</div>
<div>
    <nav class="navbar navbar-expand-lg fixed-top sticky" id="navbar">
        <div class="container-fluid custom-container">
            <a class="navbar-brand text-dark fw-bold me-auto" asp-controller="Home" asp-action="Anasayfa">
                <partial name="PartialViews/_GetSiteLogo"/>
            
            </a>
            <div>
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-label="Toggle navigation">
                    <i class="mdi mdi-menu"></i>
                </button>
            </div>

            <partial name="PartialViews/_NavMenu"/>
            <partial name="PartialViews/_LoginPartial"/>
        </div>

    </nav>
    <div class="main-content">
        @RenderBody()
        <partial name="PartialViews/_SwitcherAndTopPartial"/>
        <partial name="PartialViews/_FooterPartial"/>

    </div>
</div>
<script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://unicons.iconscout.com/release/v4.0.0/script/monochrome/bundle.js"></script>
<script src="~/libs/choices.js/public/assets/scripts/choices.min.js"></script>
<script src="~/libs/swiper/swiper-bundle.min.js"></script>
<script src="~/js/pages/job-list.init.js"></script>
<script src="~/js/pages/switcher.init.js"></script>
<script src="~/libs/glightbox/js/glightbox.min.js"></script>
<script src="~/js/pages/lightbox.init.js"></script>
<script src="~/js/pages/index.init.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.18/dist/sweetalert2.all.min.js"></script>
<script src="~/dropzone/dropzone-min.js"></script>
<script src="~/js/app.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>