@page
@using EternalBAND.Common
@using EternalBAND.DomainObjects.ViewModel;
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}
<link href="/Css/Login.css" rel="stylesheet" type="text/css">
<div class="main-content">
    <div class="page-content">
        <section class="bg-auth">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-12">
                        <div class="card auth-box">
                            <div class="row align-items-center">
                                <div class="col-lg-6 text-center">
                                    <div class="card-body p-4">
                                        <a href="index.html">
                                        <partial name="PartialViews/_GetSiteLogo"/>
                                        </a>
                                        <div class="mt-3">
                                            <img src="~/images/auth/sign-up.png" alt="" class="img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="auth-content card-body p-5 text-dark">
                                        <div class="w-100">
                                            <div class="text-center">
                                                <h5>@ViewData["Title"]</h5>
                                                <p class="text-dark-70"><partial name="PartialViews/_GetSiteTitlePartial"/>'ın tüm özelliklerine erişmek için kayıt olun.</p>
                                            </div>
                                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                                                  class="auth-form">
                                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                                <div class=" mb-3">
                                                    <label asp-for="Input.Email"></label>
                                                    <input asp-for="Input.Email" class="form-control email-bar"/>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                                <div class=" mb-3">
                                                    <label asp-for="Input.Password"></label>
                                                    <input asp-for="Input.Password" class="form-control password-bar"/>
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                                <div class=" mb-3">
                                                    <label asp-for="Input.ConfirmPassword"></label>
                                                    <input asp-for="Input.ConfirmPassword" class="form-control password-bar" />
                                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                </div>

                                                <div class=" mb-3">
                                                    <input asp-for="Input.IsPrivacyPolicyAccepted" type="checkbox" />
                                                    <span><a href="/@EndpointConstants.Kvkk" target="_blank">KVKK</a> metnini okudum ve <a href="/PrivacyPolicy" target="_blank">Gizlilik Sözleşmesi</a> ile ilgili beyanı kabul ediyorum</span>
                                                    <br/>
                                                    <span asp-validation-for="Input.IsPrivacyPolicyAccepted" class="text-danger"></span>
                                                </div>
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-white btn-hover w-100">Kayıt Ol</button>
                                                </div>
                                            </form>
                                            <br/>
                                            @if (Model.ExternalLogins.Count > 0)
                                            {
                                                var externalLoginsData = new ExternalLoginPageModel()
                                                {
                                                    ReturnUrl = Model.ReturnUrl,
                                                    ExternalLogins = Model.ExternalLogins,
                                                    ButtonTextSuffix ="kayıt ol"
                                                };
                                                <partial name="_ExternalLoginPartial" model="@externalLoginsData"></partial>
                                            }
                                            <div class="mt-3 text-center">
                                                <p class="mb-0">Hesabın var mı?<br/> <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-medium text-white text-decoration-underline">Giriş Yap!</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <partial name="PartialViews/_SwitcherAndTopPartial"/>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}