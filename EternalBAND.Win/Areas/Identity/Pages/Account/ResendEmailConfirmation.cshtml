@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Doğrulama E-postasını Yeniden Gönder";
}
<link href="/Css/ResendEmailConfirmation.css" rel="stylesheet" type="text/css">

<div class="resend-container">
    <div class="resend-box">
        <h4 class="info-text">
            E-posta adresiniz henüz doğrulanmamış. Lütfen e-postanızı kontrol ederek doğrulama bağlantısını kullanın.
        </h4>
        <h4 class="info-text">
            Doğrulama bağlantısını yeniden göndermek için aşağıdaki butona tıklayın.
        </h4>

        <hr class="divider" />

        <div class="form-wrapper">
            <form method="post" class="resend-form">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-posta</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-submit">Gönder</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}